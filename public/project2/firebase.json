{
  "hosting": [
    {
      "target": "site1",
      "public": "../../public/project2/site1",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [ {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers" : [ {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        } ]
      }, {
        "source" : "**/*.@(js|css)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=31536000"
        } ]
      }, {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=31536000"
        } ]
      }, {
        "source" : "404.html",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=300"
        } ]
      }]
    },
    {
      "target": "site2",
      "public": "../../public/project2/site2",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "headers": [ {
        "source" : "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers" : [ {
          "key" : "Access-Control-Allow-Origin",
          "value" : "*"
        } ]
      }, {
        "source" : "**/*.@(js|css)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=31536000"
        } ]
      }, {
        "source" : "**/*.@(jpg|jpeg|gif|png|svg)",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=31536000"
        } ]
      }, {
        "source" : "404.html",
        "headers" : [ {
          "key" : "Cache-Control",
          "value" : "max-age=300"
        } ]
      }]
    }
  ]
}
